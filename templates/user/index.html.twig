{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="block mb-20">
        <h2 class="pb-30">Page de profil</h2>
        {{  form_start(userForm) }}
      {{  form_rest(userForm) }}
      <button class="btn btn-primary mr-10">Mettre a jour</button>
      <small>
        <a href="{{ path('login') }}"> vous avez deja un compte? </a>
      </small>
    {{  form_end(userForm) }}
    </div>

    <div class="block mb-20">
      <h3 class="pb-20">Mes questions</h3>
      <ul>
        {% for question in app.user.questions %}
            <li>{{question.title}}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="block mb-20">
      <h3 class="pb-20">Mes reponses</h3>
      <ul>
        {% for comment in app.user.comments %}
            <li>{{comment.content | slice(0,50) }} ...</li>
        {% endfor %}
      </ul>
    </div>
{% endblock %}
